pipeline { 
    environment { 
        registry = "wahaj123/hi-python" 
        registryCredential = 'dockerhub' 
        dockerImage = 'wahaj123/hi-python' 
    }
    agent any 
    stages { 
        stage('Cloning our Git') { 
            steps { 
                git branch: 'main', 
                credentialsId: 'wahaj123', 
                url: 'https://github.com/wahaj123/Kubernetes_app.git'
            }
        }

        stage('Liniting Dockerfile') {
            steps {
                sh 'docker run --rm -i -v ${PWD}/.hadolint.yml:/.hadolint.yaml hadolint/hadolint < Dockerfile'
            }
        }

        stage('Building our image') { 
            steps { 
                script { 
                    dockerImage = docker.build registry + ":$BUILD_NUMBER" 
                }           
            }
        }
        stage ('Docker Scan'){
            steps{
                script{
                    sh 'trivy image $registry:$BUILD_NUMBER'
                }
            }
        }
        stage('Deploy our image') { 
            steps { 
                script { 
                    docker.withRegistry( '', registryCredential ) { 
                        dockerImage.push() 
                    }
                } 
            }
        }
        stage('Cleaning up') { 
            steps { 
                sh "cd python && kustomize edit set image $registry:$BUILD_NUMBER" 
            }
        }  
        stage('Cleaning up') { 
            steps { 
                sh "docker rmi $registry:$BUILD_NUMBER" 
            }
        } 
    }
}